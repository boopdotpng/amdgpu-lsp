{
  "name": "rdna-lsp",
  "displayName": "RDNA LSP",
  "description": "Hover documentation for AMD RDNA/CDNA instructions.",
  "version": "0.1.0",
  "publisher": "rdna-lsp",
  "repository": {
    "type": "git",
    "url": "https://github.com/boopdotpng/rdna-lsp.git",
    "directory": "vscode-extension"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:asm",
    "onLanguage:amdisa",
    "onLanguage:rdna",
    "onLanguage:rdna3",
    "onLanguage:rdna35",
    "onLanguage:rdna4",
    "onLanguage:cdna",
    "onLanguage:cdna3",
    "onLanguage:cdna4",
    "onCommand:rdnaLsp.restart"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/**",
    "language-configuration.json",
    "syntaxes/**",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rdna",
        "aliases": ["RDNA"],
        "extensions": [".rdna"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rdna3",
        "aliases": ["RDNA 3"],
        "extensions": [".rdna3"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rdna35",
        "aliases": ["RDNA 3.5"],
        "extensions": [".rdna35"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rdna4",
        "aliases": ["RDNA 4"],
        "extensions": [".rdna4"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "cdna",
        "aliases": ["CDNA"],
        "extensions": [".cdna"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "cdna3",
        "aliases": ["CDNA 3"],
        "extensions": [".cdna3"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "cdna4",
        "aliases": ["CDNA 4"],
        "extensions": [".cdna4"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rdna",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "rdna3",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "rdna35",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "rdna4",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "cdna",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "cdna3",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "cdna4",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "rdnaLsp.restart",
        "title": "RDNA LSP: Restart Server"
      }
    ],
    "configuration": {
      "title": "RDNA LSP",
      "properties": {
        "rdnaLsp.serverPath": {
          "type": "string",
          "default": "rdna-lsp",
          "description": "Path to the rdna-lsp server binary. Defaults to rdna-lsp in PATH."
        },
        "rdnaLsp.dataPath": {
          "type": "string",
          "default": "",
          "description": "Optional path to isa.json. If set, passed via RDNA_LSP_DATA."
        },
        "rdnaLsp.architecture": {
          "type": "string",
          "default": "",
          "description": "Optional architecture override (e.g. rdna3.5, rdna4, cdna4)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p . --noEmit && esbuild src/extension.ts --bundle --platform=node --target=node18 --sourcemap --outfile=dist/extension.js --external:vscode",
    "watch": "tsc -p . --noEmit --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3",
    "@vscode/vsce": "^3.2.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
