{
  "name": "amdgpu-lsp",
  "displayName": "AMDGPU Language Server",
  "description": "AMDGPU RDNA/CDNA language server with completion, signature help, and documentation hovers.",
  "icon": "assets/amd-icon.png",
  "version": "0.2.4",
  "publisher": "boopdotpng",
  "repository": {
    "type": "git",
    "url": "https://github.com/boopdotpng/amdgpu-lsp.git",
    "directory": "vscode-extension"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:asm",
    "onLanguage:amdisa",
    "onLanguage:rdna",
    "onLanguage:rdna3",
    "onLanguage:rdna35",
    "onLanguage:rdna4",
    "onLanguage:cdna",
    "onLanguage:cdna3",
    "onLanguage:cdna4",
    "onCommand:amdgpuLsp.restart"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist/**",
    "language-configuration.json",
    "syntaxes/**",
    "assets/**",
    "bin/**",
    "data/**",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rdna",
        "aliases": ["RDNA"],
        "extensions": [".rdna"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rdna3",
        "aliases": ["RDNA 3"],
        "extensions": [".rdna3"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rdna35",
        "aliases": ["RDNA 3.5"],
        "extensions": [".rdna35"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rdna4",
        "aliases": ["RDNA 4"],
        "extensions": [".rdna4"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "cdna",
        "aliases": ["CDNA"],
        "extensions": [".cdna"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "cdna3",
        "aliases": ["CDNA 3"],
        "extensions": [".cdna3"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "cdna4",
        "aliases": ["CDNA 4"],
        "extensions": [".cdna4"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rdna",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "rdna3",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "rdna35",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "rdna4",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "cdna",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "cdna3",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      },
      {
        "language": "cdna4",
        "scopeName": "source.rdna",
        "path": "./syntaxes/rdna.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "amdgpuLsp.restart",
        "title": "AMDGPU Language Server: Restart"
      }
    ],
    "configuration": {
      "title": "AMDGPU Language Server",
      "properties": {
        "amdgpuLsp.serverPath": {
          "type": "string",
          "default": "",
          "title": "AMDGPU Language Server: Server Path",
          "description": "Optional path to the amdgpu-lsp server binary. Defaults to the bundled server, then amdgpu-lsp in PATH."
        },
        "amdgpuLsp.dataPath": {
          "type": "string",
          "default": "",
          "title": "AMDGPU Language Server: ISA Data Path",
          "description": "Optional path to isa.json. If unset, the bundled data is used when available."
        },
        "amdgpuLsp.architecture": {
          "type": "string",
          "default": "",
          "title": "AMDGPU Language Server: Architecture Override",
          "description": "Optional architecture override (e.g. rdna3.5, rdna4, cdna4)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p . --noEmit && esbuild src/extension.ts --bundle --platform=node --target=node18 --sourcemap --outfile=dist/extension.js --external:vscode $ESBUILD_FLAGS",
    "build:release": "tsc -p . --noEmit && esbuild src/extension.ts --bundle --platform=node --target=node18 --minify --outfile=dist/extension.js --external:vscode $ESBUILD_FLAGS",
    "build:release:nomini": "tsc -p . --noEmit && esbuild src/extension.ts --bundle --platform=node --target=node18 --outfile=dist/extension.js --external:vscode $ESBUILD_FLAGS",
    "watch": "tsc -p . --noEmit --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3",
    "@vscode/vsce": "^3.2.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
