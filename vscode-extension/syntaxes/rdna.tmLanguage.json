{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RDNA ISA",
  "scopeName": "source.rdna",
  "patterns": [
    { "include": "#comments" },
    { "include": "#mnemonic" },
    { "include": "#registers" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.rdna",
          "match": ";.*$"
        },
        {
          "name": "comment.line.double-slash.rdna",
          "match": "//.*$"
        }
      ]
    },
    "mnemonic": {
      "patterns": [
        {
          "name": "keyword.operator.instruction.rdna",
          "match": "^(\\s*(?:[0-9A-Fa-f]{4,}:)?\\s*(?:[0-9A-Fa-f]{8}\\s+)*)(?i:[.A-Za-z][A-Za-z0-9_.]*)(?=\\s|$)"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.other.register.rdna",
          "match": "\\b[vs][0-9]+\\b"
        },
        {
          "name": "variable.other.register.rdna",
          "match": "\\b[vs]\\[[0-9]+(?::[0-9]+)?\\]\\b"
        },
        {
          "name": "variable.other.register.rdna",
          "match": "\\b(vcc|vcc_lo|vcc_hi|exec|exec_lo|exec_hi|m0|scc|null)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.rdna",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.rdna",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.rdna",
          "match": "\\b-?[0-9]+\\b"
        }
      ]
    }
  }
}
